@model MyAspNetMvcApp.Models.OrderApp.Product

@{
    ViewBag.Title = "Details";
    Layout = "~/Views/Shared/_Layout.cshtml";
}


<div class="thumbnail">
    <img class="img-responsive" src="data:image/jpg;base64,@Convert.ToBase64String(Model.Picture)" />

    <div class="caption-full">
        <h4 class="pull-right">@Model.Price</h4>
        <h4>
            <a href="#">@Model.Name</a>
        </h4>
    </div>
    <form action="/shoppingcart/add" method="post">
        <input type="hidden" name="productId" value="@Model.Id" />
        <input type="text" name="quantity" placeholder="Quantity" />
        <button type="submit">Add to cart</button>
    </form>

</div>