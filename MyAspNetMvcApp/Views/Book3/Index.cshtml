@model List<MyAspNetMvcApp.Models.Book>

@{
    ViewBag.Title = "Index";
}

<h2>Book List</h2>
<a href="/book3/create" class="btn btn-info">Add Books</a>

<div class="table-responsive">

    <table class="table table-hover table-striped table-condensed">
        <thead>
            <tr>
                <th>ID</th>
                <th>TITLE</th>
                <th>AUTHOR</th>
                <th>ISBN</th>
                <th>PUBLISH YEAR</th>
                <th>ACTION</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var book in Model)
            {
                <tr>
                    <td>@book.Id</td>
                    <td>@book.Title</td>
                    <td>@book.Author</td>
                    <td>@book.ISBN</td>
                    <td>@book.PublishYear</td>
                    <td>
                        <a href="/book3/edit/@book.Id">Edit</a> |
                        <a href="/book3/delete/@book.Id" onclick="return confirm('Delete @book.Title by @book.Author? Pag sure ja!');">Delete</a>
                    </td>
                </tr>

            }
        </tbody>
    </table>

</div>